body{
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;

}

.btn-modern{
    position: relative;
    padding: 10px 20px ;
    border-radius: 5px;
    border: none;
    background-color: lightgreen;
    color: white;
    border-bottom: 2px solid darkgreen;
    cursor: pointer;
    transition: background-color 0.4s;
}

.btn-modern:hover{
    /* transform: translateY(5px); */
    box-shadow: 50%;
    background-color: aquamarine;
    color: black;
    animation: traslacion 0.4s forwards;
}


@keyframes traslacion {
    5%{
        transform: translateY(-5px);
    }
}